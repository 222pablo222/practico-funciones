#include <iostream>
#include <cmath>
using namespace std;

double POTEN(double x, int y) {
return pow(x, y);
}

long long FAC(int n) {
long long f = 1;
for (int i = 1; i <= n; i++) {
f *= i;
}
return f;
}

int main() {
double x, suma = 0;
int n, signo = 1;
cout << "Ingrese el valor de X: ";
cin >> x;
cout << "Ingrese el valor de N: ";
cin >> n;
for (int i = 1; i <= n; i += 2) {
suma += signo * (POTEN(x, i) / FAC(i));
signo *= -1;
}
cout << "La suma de la serie es: " << suma << endl;
return 0;
}
