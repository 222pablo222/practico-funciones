#include <iostream>
#include <string>
#include <cmath>
using namespace std;

int binarioADecimal(string binario) {
    int decimal = 0;
    int potencia = 1;
    
    for(int i = binario.length() - 1; i >= 0; i--) {
        if(binario[i] == '1') {
            decimal += potencia;
        }
        potencia *= 2;
    }
    
    return decimal;
}

int main() {
    string binario;
    cout << "Ingrese un numero binario: ";
    cin >> binario;
    
    int decimal = binarioADecimal(binario);
    cout << "El equivalente decimal es: " << decimal << endl;
    
    return 0;
}
