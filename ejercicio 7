#include <iostream>
using namespace std;

long long FAC(int n) {
    long long fact = 1;
    for(int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

long long Combi(int n, int r) {
    if(r < 0 || r > n) return 0;
    return FAC(n) / (FAC(r) * FAC(n - r));
}

int main() {
    int n, r;
    cout << "Ingrese n y r: ";
    cin >> n >> r;
    
    long long C = Combi(n, r);
    cout << "C(" << n << "," << r << ") = " << C << endl;
    
    return 0;
}
