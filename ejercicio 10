#include <iostream>
#include <string>
using namespace std;

string decimalARomano(int numero) {
    if(numero <= 0 || numero > 3999) return "Fuera de rango";
    
    string romanos[] = {"M", "CM", "D", "CD", "C", "XC", "L", "XL", "X", "IX", "V", "IV", "I"};
    int valores[] = {1000, 900, 500, 400, 100, 90, 50, 40, 10, 9, 5, 4, 1};
    
    string resultado = "";
    
    for(int i = 0; i < 13; i++) {
        while(numero >= valores[i]) {
            resultado += romanos[i];
            numero -= valores[i];
        }
    }
    
    return resultado;
}

int main() {
    int numero;
    cout << "Ingrese un numero (1-3999): ";
    cin >> numero;
    
    string romano = decimalARomano(numero);
    cout << "El equivalente romano es: " << romano << endl;
    
    return 0;
}
